<%- include('./partials/heading.ejs') %>

<div class="heading-container">
    <div>
        <h1>Home List</h1>
    </div>
</div>

<div class="new-line">
    <form action="/submit" method="POST">
        <input type="text" name="newTask" class="task-input" placeholder="New Task">
        <input type="submit" value="Submit" class="submit-btn" name="listItem">
    </form>
</div>

    <div class="new-line">
    <% if (locals.list) { %>
        <ul class="task-list">
        <% for (let i = 0; i < list.length; i++) { %>
                    <li class="list-item">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault<%= i %>">
                        <span class="list-item-text"><%= list[i] %></span>
                        <form action="/taskDelete" method="POST" class="delete-form">
                            <button type="submit" value="<%= i %>" name="deletedTask" class="trash-button"><img src="imgs/trash-svgrepo-com.svg" class="trash-button-img" alt="trash button"></button>
                        </form>
                    </li>
            <% } %>
        </ul>
        <% } %>
    </div>
<%- include('./partials/footer.ejs') %>